            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            tools:ignore="LockedOrientationActivity"  />
        <activity
            android:name=".TermsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            tools:ignore="LockedOrientationActivity"  />
        <activity
            android:name=".CommentsActivity"
            android:screenOrientation="portrait"
